<% form_for @chart, :html => { :multipart => true } do |f| %>
		<p>
			<label>title: </label><%= f.text_field :title %>
			<br class="clearAll" /><br />
		</p>
		<p>
			<label>description: </label><%= f.text_area :description, :style=>"width:180px;height:180px;"%>
			<br class="clearAll" /><br />
		</p>
		<p>
			<label><strong>data: </strong></label><%=file_field(:upload, :filename) %>
			<br class="clearAll" /><br />
		</p>


		<p><input type="submit" value="check inputs" /></p>

	</form>
<% end %>
